// code 4: GrabBag [ variant:3 | op: 5 | ... ] 
//         TwoRegister          [ variant:3 [4] | op: 5 | dest: 4 | src: 4 ]
//         OneRegisterWithImm64 [ variant:3 [4] | op: 5 | dest: 4 | unused: 4 | imm64 ]
//         OneRegisterWithImm32 [ variant:3 [4] | op: 5 | dest: 4 | unused: 4 | imm32 ]
//         FourRegister         [ variant:3 [4] | op: 5 | dest: 4 | src0: 4 | src1: 4 | src2: 4 | unused: 8 ] // compact version
//         FiveRegister         [ variant:3 [4] | op: 5 | dest: 4 | src0: 4 | src1: 4 | src2: 4 | src3: 4 | unused: 4 ]
//         OneRegisterWithImm16 [ variant:3 [4] | op: 5 | dest: 4 | unused: 4 | imm16 ]
//         OneRegisterWithImm48 [ variant:3 [4] | op: 5 | dest: 4 | unused: 4 | imm48 ]
GrabBag(DecodeBits, FourRegister)
GrabBag(EncodeBits, FiveRegister)
GrabBag(PrintString, TwoRegister) // read two registers to get start and length in memory
GrabBag(Minus, TwoRegister) // minus unsigned makes no sense
GrabBag(MinusUnsigned, TwoRegister)
GrabBag(MinusFloatingPoint, TwoRegister)
GrabBag(Not, TwoRegister) // not is implicitly unsigned and works for boolean ops as well
GrabBag(NotBoolean, TwoRegister)
GrabBag(NotSigned, TwoRegister)
GrabBag(LoadImmediate16, OneRegisterWithImm16)
GrabBag(LoadImmediate32, OneRegisterWithImm32)
GrabBag(LoadImmediate48, OneRegisterWithImm48)
GrabBag(LoadImmediate64, OneRegisterWithImm64)
// code 5-7: Unused!

